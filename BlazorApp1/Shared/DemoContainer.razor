
<AntCard id="@($"components-{Component}-demo-")"
         class="@($"{Component}-demo")"
         style="margin: 20px;"
         bordered>
    <Title>
        @Title
    </Title>
    <Body>
        @Content
    </Body>
</AntCard>
@code {

    [Parameter]
    public string Component { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment Content { get; set; }
    [Parameter]
    public RenderFragment Code { get; set; }

}
